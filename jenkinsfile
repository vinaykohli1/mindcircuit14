 pipeline {
    agent any

    stages {
        stage('CLONE SCM') {
            steps {
                echo 'Cloning fb-app project code'
				git branch: 'main', url: 'https://github.com/devopstraininghub/mindcircuit14.git'
            }
        }
		
		stage('Build Artifact') {
            steps {
                echo 'Generating artifact with maven build tool'
				sh 'mvn clean install'
            }
        }
		
		stage('Deploy to tomcat') {
            steps {
                echo 'Deploying artifact to tomcat webserver'
				deploy adapters: [tomcat9(credentialsId: 'FB-PAGE', path: '', url: 'http://98.81.204.216:8091/')], contextPath: 'fb-PAGE', war: '**/*.war\''
            }
        }
    }
}
